<%- include('../header') %>
<%- include('title') %>


<div class="mt-3">
    <form>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name">
        </div>
        <div class="mb-3">
            <label class="form-label mb-0">ID</label>
            <div class="form-text">Internal ID is automatically derived and cannot be a custom value.</div>
        </div>
        <div class="mb-3">
            <label class="form-label">BINs</label>
            <textarea spellcheck="false" class="form-control" style="font-family:monospace;" id="bins"></textarea>
            <div class="form-text">Provide a comma separated set of 6-digit BIN numbers.</div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

<%- include('../footer') %>